generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Use the Supabase-provided variable available in Vercel integration
  url      = env("POSTGRES_PRISMA_URL")
}

model Lancamento {
  id           String    @id @default(uuid())
  data         DateTime
  historico    String
  documento    String?
  criadoEm     DateTime @default(now())
  atualizadoEm DateTime?
  partidas     Partida[]
}

model Partida {
  id           String   @id @default(uuid())
  contaCodigo  String
  contaNome    String
  natureza     String
  valor        Float
  lancamentoId String
  lancamento   Lancamento @relation(fields: [lancamentoId], references: [id])
}
